@model IEnumerable<MvcMovie.Models.Movie>

<div class="container-fluid margin-top-20">
    <div class="row">
        @using (Html.BeginForm("SearchIndex", "Movie", FormMethod.Get))
        {
            <div class="col-sm-2 smallpadding">
                @Html.DropDownList("movieGenre", null, "All Genre", new { @class = "btn btn-default btn-block dropdown-toggle" })
            </div>
            <div class="col-sm-4 smallpadding">
                @Html.TextBox("searchString", null, new { @class = "form-control", @placeholder = "Title" })
            </div>
            <div class="col-sm-4 smallpadding">
                <button type="submit" value="Search" class="btn btn-default  ">
                    Search
                </button>
            </div>
        }
    </div>
</div>

<div ng-app="myApp" ng-controller="myCtrl">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="container-fluid boxshadow-container col-lg-2 margin-top-20 margin-right-15 margin-left-15">
                <div class="row">
                    <img class="img-container col-lg-12 nopadding" src=@item.ImageLink alt=@item.Id height="220px" />
                    <div class="img-text">
                        <a href="@Url.Action("Details", "Movie", new { id = item.Id })">
                            @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>