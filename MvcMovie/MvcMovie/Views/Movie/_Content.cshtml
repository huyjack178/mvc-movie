@model IEnumerable<MvcMovie.Models.Movie>

<table class="table table-hover table-bordered index-table z-depth-2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                Operation
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td class="container-fluid">
                    <button class="btn btn-primary  col-md-3 "
                            type="button"
                            onclick="location.href='@Url.Action("Edit", "Movie", new { id = item.Id })'">
                        Edit
                    </button>
                    <button class="btn btn-info  col-md-3 margin-left-10"
                            type="button"
                            onclick="location.href='@Url.Action("Details", "Movie", new { id = item.Id })'">
                        Details
                    </button>
                    <button class="btn btn-danger  col-md-3 margin-left-10 modal-link"
                            type="button"
                            data-toggle="modal" data-target="#deleteModal"
                            ng-click="getMovie(@item.Id)">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>