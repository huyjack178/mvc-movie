<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Movie Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrapcss")
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="" href="@Url.Action("Index","MovieClient")">
                    <img class="img-responsive" src="~/Images/logo-white.png" alt="Alternate Text" width="50" />
                </a>
            </div>
            <div>
                <ul class="nav navbar-nav">
                    <li class="container-fluid">
                    </li>
                </ul>
            </div>
            <ul class="nav navbar-nav navbar-right">
                @if (Request.IsAuthenticated)
                {
                    <li>
                        <a href=@Url.Action("Detail", "ClientUser", new { userName = @User.Identity.Name})>
                            <span class="glyphicon glyphicon-user"></span>
                            Welcome, @User.Identity.Name
                        </a>
                    </li>
                    <li>
                        <a href=@Url.Action("Logout", "ClientUser")>
                            <span class="glyphicon glyphicon-log-out">
                            </span> Log out
                        </a>
                    </li>
                }
                else
                {
                    <li>

                        <a class=" modal-link"
                           data-toggle="modal" data-target="#registerModal">
                            <span class="glyphicon glyphicon-log-in"></span> Sign up
                        </a>
                    </li>
                    <li>
                        <a class=" modal-link"
                           data-toggle="modal" data-target="#loginModal">
                            <span class="glyphicon glyphicon-log-in"></span> Login
                        </a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix col-md-12">
                @RenderBody()
            </section>
        </div>
    </div>

    <div class="clear"></div>

    <div class="panel-footer">
        <span class="glyphicon glyphicon-copyright-mark"> </span> 2016 MVC Movie Exercise
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/myjs")
    @RenderSection("scripts", required: false)
</body>
</html>

<!-- Modal -->
<div class="modal fade" id="loginModal" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            @Html.Partial("~/Views/ClientUser/_Login.cshtml", new MvcMovie.Models.ClientUser())
        </div>
    </div>
</div>

<div class="modal fade" id="registerModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @Html.Partial("~/Views/ClientUser/_Register.cshtml", new MvcMovie.Models.RegisterUser())
        </div>
    </div>
</div>