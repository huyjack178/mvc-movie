<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Movie Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrapcss")
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                @if (Request.IsAuthenticated)
                {
                    <a class="" href="@Url.Action("Index","Movie")">
                        <img class="img-responsive" src="~/Images/logo-white.png" alt="Alternate Text" width="50" />
                    </a>
                }
                else
                {
                    <a class="" href="">
                        <img class="img-responsive" src="~/Images/logo-white.png" alt="Alternate Text" width="50" />
                    </a>
                }
            </div>
            @if (Request.IsAuthenticated)
            {
                <div>
                    <ul class="nav navbar-nav">
                        <li class=""><a href="@Url.Action("Index", "Movie")">Movies</a></li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class=""><a href="@Url.Action("Index", "AdminUser")">Users</a></li>
                    </ul>
                </div>
                <ul class="nav navbar-nav navbar-right">

                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-user">
                            </span> Welcome, @User.Identity.Name
                        </a>
                    </li>
                    <li>
                        <a href=@Url.Action("Logout", "AdminUser")>
                            <span class="glyphicon glyphicon-log-out">
                            </span> Log out
                        </a>
                    </li>
                </ul>
            }
        </div>
    </nav>

    <div class="container">
        <div class="row">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix col-md-12">
                @RenderBody()
            </section>
        </div>
    </div>

    <div class="clear"></div>

    <div class="panel-footer">
        <span class="glyphicon glyphicon-copyright-mark"> </span> 2016 MVC Movie Exercise
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/myjs")
    @RenderSection("scripts", required: false)
</body>
        </html>