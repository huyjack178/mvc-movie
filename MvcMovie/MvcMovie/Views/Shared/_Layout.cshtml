<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Movie Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrapcss")
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index","Movie")">MVC Movie</a>
            </div>
            <div>
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Movie", "Index")</li>
                </ul>
            </div>
            <ul class="nav navbar-nav navbar-right">
                @if (Request.IsAuthenticated)
                {
                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-user">
                            </span> Welcome, @User.Identity.Name
                            @Html.ActionLink("Log out", "Logout", "User")
                        </a>
                    </li>
                }

                @*<li>
                <a href="#">
                    <span class="glyphicon glyphicon-log-in">
                    </span> Login
                </a>
            </li>*@
            </ul>

        </div>
    </nav>
    <div class="container">
        <div class="row">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix col-md-12">
                @RenderBody()
            </section>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/myjs")
    @RenderSection("scripts", required: false)
</body>
</html>